@page "/dictionary/product/create"
@attribute [Authorize]
@inherits AddDictionary<ProductDto>
@using FuelAcc.ApiClient
@using FuelAcc.Client.Shared.Pages

<h1>Create Product</h1>
<br/>
<Form ButtonText="Create" record="@Record" loading="@Loading" OnValidSubmit="@CreateRecord" />

@code {
    protected override void OnInitialized()
    {
        NavigationPrefix = "/dictionary/product";
        SucceededAlertText = "Product added successfully";
        Record = new ProductDto();
        base.OnInitialized();
    }
}