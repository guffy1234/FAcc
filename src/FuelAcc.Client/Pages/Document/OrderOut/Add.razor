@page "/document/orderout/create"
@attribute [Authorize]
@inherits AddDocument<OrderOutDto>
@using FuelAcc.ApiClient
@using FuelAcc.Client.Shared.Pages

<h1>Create In Order</h1>
<br/>
<Form ButtonText="Create" record="@Record" loading="@Loading" OnValidSubmit="@CreateRecord" />

@code {
    protected override void OnInitialized()
    {
        NavigationPrefix = "/document/orderout";
        SucceededAlertText = "Out Order added successfully";
        Record = new OrderOutDto();
        Record.Date = DateTime.UtcNow;
        Record.Number = $"OUT.{Record.Date.ToString("yyyyMMddHHmmss")}";
        Record.Description = string.Empty;

        base.OnInitialized();
    }
}